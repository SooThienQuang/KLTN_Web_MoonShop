<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tooltipText="Gio hang"
    android:background="@color/blue_holo">
    <TextView
        android:id="@+id/txtcartname"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagecart"
            android:layout_marginTop="50dp"
            android:layout_width="100dp"
            app:cornerRadius="50dp"
            android:layout_height="80dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        >
     <ImageButton
         android:backgroundTint="@color/blue_holo"
         android:id="@+id/imcarttru"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/ic_baseline_horizontal_rule_24">
     </ImageButton>
        <EditText
            android:layout_width="50dp"
            android:textAlignment="center"
            android:id="@+id/txtcartsl"
            android:layout_height="wrap_content"
            >
        </EditText>
        <ImageButton
            android:backgroundTint="@color/blue_holo"
            android:id="@+id/imcartcong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_add_24">
        </ImageButton>
        <ImageButton
            android:id="@+id/btncartdelete"
            android:backgroundTint="@color/red_holo"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/btnsave"
            android:src="@drawable/ic_baseline_save_24"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
            <TextView
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá sản phẩm :"></TextView>
            <TextView
                android:id="@+id/txtcartprice"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="@color/red_holo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>