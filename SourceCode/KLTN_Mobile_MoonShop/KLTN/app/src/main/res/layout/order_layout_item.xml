<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tooltipText="Gio hang"
    app:contentPadding="1dp"
    android:background="@color/blue_holo">
    <TextView
        android:id="@+id/txtodname"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageod"
            android:layout_marginTop="50dp"
            android:layout_width="100dp"
            app:cornerRadius="50dp"
            android:layout_height="80dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Trạng thái :  ">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/blue_holo"
            android:layout_marginLeft="10dp"
            android:id="@+id/statusod"
            android:layout_height="wrap_content"
            android:text="Chờ xác nhận">

        </TextView>
    </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black"
                   android:text="Giá sản phẩm :"></TextView>
               <TextView
                   android:id="@+id/txtodprice"
                   android:textStyle="bold"
                   android:textSize="15sp"
                   android:layout_gravity="center"
                   android:textColor="@color/red_holo"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Số lượng :  ">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/red_holo"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txtslod"
                    android:layout_height="wrap_content"
                    android:text="1">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Tổng tiền:        ">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/red_holo"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txtodmoney"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="200000">

                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>