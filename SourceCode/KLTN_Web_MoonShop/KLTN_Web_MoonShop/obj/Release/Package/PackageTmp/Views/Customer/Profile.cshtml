@if (@ViewBag.user != null)
{
    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" id="profileDropdown">
        <img src="~/Asset/img/user/@ViewBag.user.customerPhoto" />
        <span class='badge badge-warning' id='lblCartCount'>1</span>
        <div class="item-content">Chào @ViewBag.name !</div>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
        <p class="mb-0 font-weight-normal float-left dropdown-header">@ViewBag.user.customerName</p>
        <a class="dropdown-item" href="@Url.Action("DetailProfile","Customer",new {id=2})">
            @*<i class="ti-wallet text-primary"></i>*@
            <i class="ti-bell text-primary"></i>
            <span class='badge badge-warning' id='lblCartCount'>1</span>
            &nbsp; Thông báo
        </a>
        <a class="dropdown-item" href="@Url.Action("DetailProfile","Customer",new {id=2})">
            @*<i class="ti-wallet text-primary"></i>*@
            <i class="ti-truck text-primary">&#xf07a;</i>
            &nbsp; Đơn mua
        </a>
        <a class="dropdown-item" href="@Url.Action("DetailProfile","Customer",new {id=1})">
            <i class="ti-settings text-primary"></i>
            Thông tin cá nhân
        </a>
        <a class="dropdown-item" href="@Url.Action("Login","Customer")">
            <i class="ti-power-off text-primary"></i>
            Đăng xuất
        </a>
    </div>
}
else
{
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-bs-toggle="dropdown">
        <i class="ti-user mx-0">&#xf07a;</i>

        <div class="item-content">Xin chào ! hãy đăng nhập ngay .</div>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
        <a class="dropdown-item" href="@Url.Action("Register","Customer")">
            <i class="ti-user text-primary"></i>
            Đăng kí tài khoản
        </a>
        <a class="dropdown-item" href="@Url.Action("Login","Customer")">
            <i class="ti-power-off text-primary"></i>
            Đăng nhập
        </a>
    </div>
}

