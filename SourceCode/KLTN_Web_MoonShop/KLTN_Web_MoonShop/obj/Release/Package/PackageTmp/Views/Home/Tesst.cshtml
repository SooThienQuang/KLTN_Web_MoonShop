<h5>Số lượng</h5>
    <br />
    <div class="sign">
        <span id="minus2">
            <i class="fa fa-minus"></i>
        </span> <h5 id="quantity2">1</h5> <span id="plus2">
            <i class="fa fa-plus"></i>
        </span>
    </div>
<script>
    var plus = document.querySelector("#plus2");
    var quantity = document.querySelector("#quantity2");
    var minus = document.querySelector("#minus2");
    plus.addEventListener('click', function () {

        var increment = parseInt(quantity.innerHTML);

        if (increment < 100) {
            increment = increment + 1;

            quantity.innerHTML = increment;

        }
    });
    minus.addEventListener('click', function () {

        var increment = parseInt(quantity.innerHTML);
        if (increment > 1) {
            increment = increment - 1;
            quantity.innerHTML = increment;
        }

    });
</script>


