@using KLTN_Web_MoonShop.Models;
@{
    ViewBag.Title = "Waiting";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    DBCosmeticEntities db = new DBCosmeticEntities();
    List<Order> lstorder = db.Orders.ToList().OrderByDescending(n => n.createDate).ToList();
    List<OrderDetail> lstod = db.OrderDetails.ToList();
}

<h2>Các đơn hàng chờ xử lý</h2>
<div class="card-body">
    <h5 class="card-title">Top mua hàng  <span>| Today</span></h5>

    <table class="table table-borderless datatable">
        <thead style="background-color:yellowgreen">
            <tr>
                <th scope="col">Mã vận đơn</th>
                <th scope="col">Họ tên khách hàng</th>
                <th scope="col">Ngày đặt</th>
                <th scope="col">Trạng thái</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in lstorder)
            {

                Customer cus = db.Customers.FirstOrDefault(n => n.customerID == item.customerID && n.isActive == 1);
                List<OrderDetail> lst = db.OrderDetails.Where(n => n.orderID == item.orderID).ToList();
                var tongtien = @lst.Sum(n => n.Money);
                OrderDetail od = db.OrderDetails.FirstOrDefault(n => n.orderID == item.orderID);
                Product pro = db.Products.FirstOrDefault(n => n.productID == od.productID);
                <tr>
                    <th scope="row"><a href="#">@item.orderID</a></th>
                    <td>@cus.customerName</td>
                    <td>@item.createDate</td>
                    <td>
                        @if (item.status == 1)
                        {
                            <span class="badge bg-dark">Chờ xác nhận</span>
                        }
                        else
                            if (item.status == 2)
                        {
                            <span class="badge bg-primary">Đã xác nhận</span>
                        }
                        else
                        if (item.status == 3)
                        {
                        <span class="badge bg-danger">Đang giao </span>
                        }
                        else
                        {
                        <span class="badge bg-success">Giao thành công</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-success" onclick="ShowMoreOrder(@item.orderID)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                            </svg>
                            Cập nhật
                        </button>
                    </td>
                </tr>
            }


        </tbody>
    </table>

</div>
<div id="divid1" style="height:100px; width:400px" ;>
</div>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" />
