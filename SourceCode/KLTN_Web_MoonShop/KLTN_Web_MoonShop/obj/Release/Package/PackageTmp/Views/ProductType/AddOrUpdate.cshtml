@model KLTN_Web_MoonShop.Models.ProductType
@using (Html.BeginForm("AddOrUpdate", "ProductType"))
{
    <div class="modal fade" id="modalProductType" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@ViewBag.Title </h5>
                    <button type="button" class="close" onclick="HideModalUpPro()" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Tên loại sản phẩm
                    @if (@Model== null)
                    {
                        <input type="text" class="form-control" name="txtprotypename" />
                    }
                    else
                    {
                        <input type="text" class="form-control" name="txtprotypename" value="@Model.proTypeName" />
                    }

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="HideModalUpPro()">Đóng</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $("#modalProductType").modal("show");
    });
    var HideModalUpPro = function () {

        $("#modalProductType").modal("hide");

    }
</script>