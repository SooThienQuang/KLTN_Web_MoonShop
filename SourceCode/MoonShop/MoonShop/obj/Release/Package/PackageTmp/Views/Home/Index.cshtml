@model IEnumerable<MoonShop.Models.Tbl_Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/_HomeLayout.cshtml";
}

<script type="text/javascript">

    $(document).ready(function () {

        $('#buttonId').click(function () {
            var reportDate = $(this).data('id');
            var url = '@Url.Action("Modal", "Home", new {id = "data"})';
            $('#divid').load(url.replace('data', reportDate));
        });
    });
</script>
<div id="divid" style="height:100px; width:400px" ;>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            @Html.Action("CaroselBaner", "Carosel")
        </div>
        </div>
    <div class="row">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.price)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        <button data-id="@item.id" id="buttonId" class="btn btn-outline-success">Edit</button>
                    </td>
                </tr>

            }

        </table>
    </div>

    <div class="row">
        @Html.Action("CaroselProductHot", "Carosel")
    </div>
</div>
